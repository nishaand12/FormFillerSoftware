<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Microphone access entitlement -->
    <key>com.apple.security.device.audio-input</key>
    <true/>
    
    <!-- Bluetooth access for wireless microphones -->
    <key>com.apple.security.device.bluetooth</key>
    <true/>
    
    <!-- Allow network access for authentication -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- File access for saving appointments -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Disable library validation for unsigned dependencies -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Allow dyld environment variables -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>
    
    <!-- Allow unsigned executable memory (needed for some Python libraries) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Allow JIT compilation (needed for some ML libraries) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
</dict>
</plist>

